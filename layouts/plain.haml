!!! 5
= surround "<!--[if lt IE 9]><html class=\"lte-ie8\" lang=\"de\"><![endif]-->\n<!--[if gt IE 8]><!--><html lang=\"de\"><!--<![endif]-->", '</html>' do
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

    - unless description.blank?
      %meta(name="description" content="#{description}")
    - unless keywords.nil? || keywords.empty?
      %meta(name="keywords" content="#{keywords}")
    %meta(name="Author" content="Sanna Rehfeld")
    %meta(name="Copyright" content="focus fengshui, Sanna Rehfeld")

    %title= 'focus fengshui' << (@item[:title].blank? ? '' : " - #{@item[:title]}")

    %script(type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js")
    %script(type="text/javascript" src="/javascripts/site.js")

  %body
    %section.content
      = yield

    %section.sidebar
      = @item[:content_for_sidebar]
