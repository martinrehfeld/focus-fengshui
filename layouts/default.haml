!!! 5
%html(lang="de")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

    - unless description.blank?
      %meta(name="description" content="#{description}")
    - unless keywords.nil? || keywords.empty?
      %meta(name="keywords" content="#{keywords}")
    %meta(name="Author" content="Sanna Rehfeld")
    %meta(name="Copyright" content="focus fengshui, Sanna Rehfeld")

    %title= 'focus fengshui' << (@item[:title].blank? ? '' : " - #{@item[:title]}")

    %link(rel="stylesheet" href="/stylesheets/site.css" type="text/css")
    /[if lte IE 9]
      %link(rel="stylesheet" href="css/ie.css" type="text/css" media="screen")
    %link(rel="stylesheet" href="/stylesheets/mobile.css" type="text/css" media="handheld, only screen and (max-width: 767px)")
    %link(rel="shortcut icon" href="/favicon.ico" type="image/x-icon")
    %link(rel="icon" href="/favicon.ico" type="image/x-icon")

    %script(type="text/javascript" src="/javascripts/site.js")

  %body
    #container
      %header
        %h1.site-title focus feng shui
        %h2.site-subtitle Beratung und Raumgestaltung Sanna Rehfeld
        %nav.site
          = link_to 'Home', '/'
          |
          = link_to 'Kontakt', '/kontakt/'
          |
          = link_to 'Impressum', '/impressum/'
      #main
        %section.menu
          %nav.content
            = link_to 'Feng Shui', '/feng-shui/', :class => 'level1'
            = link_to 'Beratung', '/beratung/', :class => 'level1'
            = link_to 'Sanna Rehfeld', '/sanna-rehfeld/', :class => 'level1'

        %section.content
          = yield
        %section.sidebar
      %footer
        %p.copyright &copy; 2011 focus feng shui | Sanna Rehfeld
